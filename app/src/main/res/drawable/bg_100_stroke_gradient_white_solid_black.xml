<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="16dp" />
            <gradient
                android:angle="45"
                android:centerColor="#A717E0"
                android:endColor="#A717E0"
                android:startColor="#A717E0" />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="15dp" />
            <solid android:color="#E6E6E6" />
        </shape>
    </item>
</layer-list>