<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Khai báo dùng chung -->
    <attr name="strokeJoinStyle">
        <enum name="miter" value="0" />
        <enum name="bevel" value="1" />
        <enum name="round" value="2" />
    </attr>
    <attr name="strokeMiter" format="dimension" />

    <!-- Single Stroke -->
    <declare-styleable name="StrokeTextView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeJoinStyle" />
        <attr name="strokeMiter" />
        <attr name="gradientStartColor" format="color" />
        <attr name="gradientEndColor" format="color" />
        <attr name="useGradient" format="boolean" />
        <attr name="gradientOrientation">
            <enum name="leftToRight" value="0" />
            <enum name="topToBottom" value="1" />
            <enum name="diagonal" value="2" />
        </attr>
    </declare-styleable>

    <!-- Double Stroke -->
    <declare-styleable name="DoubleStrokeTextView">
        <attr name="outerStrokeColor" format="color" />
        <attr name="outerStrokeWidth" format="dimension" />
        <attr name="innerStrokeColor" format="color" />
        <attr name="innerStrokeWidth" format="dimension" />
        <attr name="strokeJoinStyle" />
        <attr name="strokeMiter" />
    </declare-styleable>

    <!-- Blur Layout -->
    <declare-styleable name="BlurLayout">
        <attr name="downscaleFactor" format="float" />
        <attr name="blurRadius" format="integer" />
        <attr name="fps" format="integer" />
    </declare-styleable>

    <declare-styleable name="RatioFrameLayout">
        <attr name="ratio" format="string" /> <!-- ví dụ: "1:1" hoặc "3:4" -->
    </declare-styleable>
</resources>
